+b.HEADER.header
	+e.wrapper
		+e.left
			+e.IMG.logo(src=`${baseDir}assets/images/icons/logo.png` alt="")
		+e.menu.for-desktop
			+e.list
				+e.A.link.js-scroll-link(href="#section1" data-target="section1" data-i18n="menu.link_1") О нас
				+e.A.link.js-scroll-link(href="#section2" data-target="section2" data-i18n="menu.link_2") Вакансии
				+e.A.link.js-scroll-link(href="#section3" data-target="section3" data-i18n="menu.link_3") Плюсы работы
				+e.A.link.js-scroll-link(href="#section4" data-target="section4" data-i18n="menu.link_4") Ответы на вопросы
		+e.right
			+e.lang-wrapper
				+e.lang.js-lang-ru(type="button" data-lang="ru")
					+e.IMG.lang-img(src=`${baseDir}assets/images/icons/ru.png` alt="")
				+e.lang.js-lang-uzb(type="button" data-lang="uzb")
					+e.IMG.lang-img(src=`${baseDir}assets/images/icons/uzb.png` alt="")
			+e.btn.for-desktop.js-scroll-link(href="#section5" data-target="section5")
				+e.btn-icon--1
					+svg("btn-icon")
				+e.btn-text Заполнить анкету
				+e.btn-icon--2
					+svg("btn-icon")
			.hamburger-container.for-devices
				ul.hamburger
					li
					li
					li

